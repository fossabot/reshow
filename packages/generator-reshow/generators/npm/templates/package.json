{
  "version": "0.0.0",
  "name": "<%= mainName %>",
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= repositoryOrgName %>/<%= repositoryName %>",
    "directory": "packages/lib/<%= mainName %>"
  },
  "homepage": "https://github.com/<%= repositoryOrgName %>/<%= repositoryName %>/tree/main/packages/lib/<%= mainName %>",
  "description": "<%= description %>",
  "keywords": [],
  "author": "<%= authorName %> <<%= authorEmail %>>",
  "license": "ISC",
  "dependencies": {
    <%= reshowAppPackage %>
    "reshow-constant": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.x",
    "reshow-unit": "*"
  },
  "main": "./build/cjs/src/index.js",
  "module": "./build/es/src/index.js",
  "bin": {
    "<%= mainName %>": "./build/cjs/src/index.js"
  },
  "scripts": {
    "clean": "find ./build -name '*.*' | xargs rm -rf",
    "build:cjs": "BABEL_ENV=cjs babel src -d build/cjs/src <%= babelRootMode %>",
    "build:es": "BABEL_ENV=es babel src -d build/es/src <%= babelRootMode %>",
    "build": "npm run clean && npm run build:cjs && npm run build:es",
    "mochaFor": "mocha -r jsdom-global/register",
    "mocha": "npm run mochaFor -- 'build/cjs/**/__tests__/*.js'",
    "test": "npm run build && npm run mocha",
    "prepublishOnly": "npm run test"
  },
  "files": ["build", "package.json", "README.md"],
  "engines": { "node": ">=14" }
}
