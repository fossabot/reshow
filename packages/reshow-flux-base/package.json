{
  "name": "reshow-flux-base",
  "version": "0.2.4",
  "description": "Pure flux dispatch mechanism",
  "main": "./build/cjs/index.js",
  "module": "./build/es/index.js",
  "repository": "react-atomic/reshow",
  "keywords": [
    "flux"
  ],
  "author": "Hill <hill@kimo.com>",
  "license": "MIT",
  "dependencies": {
    "call-func": "*",
    "reshow-runtime": "*",
    "reshow-constant": "*",
    "setimmediate": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.x",
    "chai": "*",
    "mocha": "*",
    "sinon": "*"
  },
  "scripts": {
    "clean": "find ./build -name '*.*' | xargs rm -rf",
    "build": "npm run clean && npm run build:cjs && npm run build:es",
    "build:cjs": "BABEL_ENV=build babel src -d build/cjs --root-mode upward",
    "build:es": "BABEL_ENV=es babel src -d build/es --root-mode upward",
    "mocha": "mocha -r jsdom-global/register 'build/cjs/**/__tests__/*.js'",
    "test": "npm run build && npm run mocha",
    "prepublishOnly": "npm run test && npm run build"
  },
  "files": [
    "build",
    "package.json",
    "README.md"
  ]
}
