{
  "version": "0.17.10",
  "name": "reshow-unit",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-atomic/reshow",
    "directory": "packages/reshow-unit"
  },
  "homepage": "https://github.com/react-atomic/reshow/tree/main/packages/reshow-unit",
  "description": "Reshow Unit Test Pack",
  "main": "./build/cjs/src/index.js",
  "module": "./build/es/src/index.js",
  "keywords": [],
  "author": "Hill <hill@kimo.com>",
  "license": "MIT",
  "dependencies": {
    "@testing-library/react": "^13.x",
    "@testing-library/user-event": "^14.x",
    "get-random-id": "*",
    "react-test-renderer": "^18.x",
    "reshow-unit-dom": "*",
    "win-doc": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.x",
    "react": "^18.x",
    "react-dom": "^18.x"
  },
  "scripts": {
    "format": "prettier-eslint --write '**/src/**/*.js' '**/ui/**/*.jsx'",
    "clean": "find ./build -name '*.*' | xargs rm -rf",
    "build:cjs": "BABEL_ENV=cjs babel src -d build/cjs/src --root-mode upward",
    "build:es": "BABEL_ENV=es babel src -d build/es/src --root-mode upward",
    "build": "npm run clean && npm run build:cjs && npm run build:es",
    "mochaFor": "mocha -r global-jsdom/register",
    "mocha": "npm run mochaFor -- 'build/cjs/**/__tests__/*.js'",
    "test": "npm run build && npm run mocha",
    "prepublishOnly": "npm run test"
  },
  "files": [
    "build",
    "package.json",
    "README.md"
  ]
}
